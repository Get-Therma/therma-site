      <stop offset="60%" style="stop-color:#FCB200;stop-opacity:0" />
    </radialGradient>
    <radialGradient id="accent3" cx="30%" cy="70%" r="60%">
      <stop offset="0%" style="stop-color:#830698;stop-opacity:0.6" />
      <stop offset="30%" style="stop-color:#830698;stop-opacity:0.2" />
      <stop offset="60%" style="stop-color:#830698;stop-opacity:0" />
    </radialGradient>
    <radialGradient id="accent4" cx="70%" cy="80%" r="50%">
      <stop offset="0%" style="stop-color:#7CA2FD;stop-opacity:0.7" />
      <stop offset="30%" style="stop-color:#7CA2FD;stop-opacity:0.2" />
      <stop offset="60%" style="stop-color:#7CA2FD;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bg)"/>
  
  <!-- Accent gradients -->
  <rect width="1200" height="630" fill="url(#accent1)"/>
  <rect width="1200" height="630" fill="url(#accent2)"/>
  <rect width="1200" height="630" fill="url(#accent3)"/>
  <rect width="1200" height="630" fill="url(#accent4)"/>
  
  <!-- Main logo -->
  <circle cx="200" cy="200" r="80" fill="#6366F1"/>
  <path d="M160 160h80v20h-30v60h-20V180h-30v-20z" fill="white"/>
  <circle cx="280" cy="160" r="8" fill="rgba(255,255,255,0.3)"/>
  
  <!-- Title -->
  <text x="350" y="180" font-family="Arial, sans-serif" font-size="72" font-weight="bold" fill="white">
    Therma
  </text>
  
  <!-- Subtitle -->
  <text x="350" y="240" font-family="Arial, sans-serif" font-size="32" fill="rgba(255,255,255,0.8)">
    Habit Tracker for Energy, Clarity &amp; Confidence
