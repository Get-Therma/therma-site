    <line x1="850" y1="180" x2="900" y2="120" stroke="#FF5920" stroke-width="2" opacity="0.5"/>
    <line x1="900" y1="120" x2="950" y2="200" stroke="#FCB200" stroke-width="2" opacity="0.5"/>
    <line x1="950" y1="200" x2="1000" y2="160" stroke="#830698" stroke-width="2" opacity="0.5"/>
