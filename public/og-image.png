<svg width="1200" height="630" viewBox="0 0 1200 630" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#000000;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1a1a1a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="accent1" cx="20%" cy="20%" r="60%">
      <stop offset="0%" style="stop-color:#FF5920;stop-opacity:0.8" />
      <stop offset="30%" style="stop-color:#FF5920;stop-opacity:0.3" />
      <stop offset="60%" style="stop-color:#FF5920;stop-opacity:0" />
    </radialGradient>
    <radialGradient id="accent2" cx="80%" cy="30%" r="50%">
      <stop offset="0%" style="stop-color:#FCB200;stop-opacity:0.7" />
